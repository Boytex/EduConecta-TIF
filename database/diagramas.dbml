@enduml

CREATE TABLE Persona ( id INT AUTO_INCREMENT PRIMARY KEY, nombre VARCHAR(255) NOT NULL, apellido VARCHAR(255) NOT NULL, dni VARCHAR(50) NOT NULL );

CREATE TABLE Alumno ( idAlumno INT AUTO_INCREMENT PRIMARY KEY, legajo VARCHAR(100), persona_id INT, FOREIGN KEY (persona_id) REFERENCES Persona(id) );

CREATE TABLE Profesor ( idProfesor INT AUTO_INCREMENT PRIMARY KEY, titulo VARCHAR(255), persona_id INT, FOREIGN KEY (persona_id) REFERENCES Persona(id) );

CREATE TABLE Curso ( idCurso INT AUTO_INCREMENT PRIMARY KEY, nombreCurso VARCHAR(255) NOT NULL, profesor_id INT, FOREIGN KEY (profesor_id) REFERENCES Profesor(id) );

Table persona { id bigint [pk, increment] nombre varchar [not null] apellido varchar [not null] dni varchar fecha_nac date }

Table usuario { id bigint [pk, increment] username varchar [not null, unique] password_hash varchar [not null] rol varchar [not null] persona_id bigint [not null] }

Table alumno { id bigint [pk, increment] legajo varchar [not null, unique] persona_id bigint [not null] }

Table profesor { id bigint [pk, increment] titulo varchar persona_id bigint [not null] }

Table curso { id bigint [pk, increment] nombre varchar [not null] descripcion varchar cupo int profesor_id bigint }

Table inscripcion { id bigint [pk, increment] alumno_id bigint [not null] curso_id bigint [not null] fecha_inscripcion date estado varchar }

Ref: usuario.persona_id > persona.id Ref: alumno.persona_id > persona.id Ref: profesor.persona_id > persona.id

Ref: curso.profesor_id > profesor.id

Ref: inscripcion.alumno_id > alumno.id Ref: inscripcion.curso_id > curso.id
